YUI_config = {
{% if app.environment == 'dev' %}
    debug: true,
{% endif %}
    combine: true,
    comboBase : '{{ path('libbit_yui_minify') }}?b={{ base_url }}&f=',
    root: 'yui{{ version }}/',
    lang: '{{ app.session.locale }}',
    filter : {
        'searchExp': '(^(?:[^&]+&[^&]+)|[^&]+)&(?!f=)',
        'replaceStr': '$1,'
    },
    
    groups: {
        yui2: {
            combine: true,
            root: 'yui2in3/',
            patterns: {
                'yui2-': {
                    configFn: function(me) {
                        if(/-skin|reset|fonts|grids|base/.test(me.name)) {
                            me.type = 'css';
                            me.path = me.path.replace(/\.js/, '.css');
                            me.path = me.path.replace(/\/yui2-skin/, '/assets/skins/sam/yui2-skin');
                        }
                    }
                }
            }
        },
        
        gallery: {
            combine: true,
            root: 'gallery/',
            patterns: {
                'gallery-': {
                    configFn: function(me) {
                        if(/-skin/.test(me.name)) {
                            me.name = me.name.replace('-skin', '');
                            me.path = me.name + '/assets/' + me.name + '.js'
                            me.type = 'css';
                            me.path = me.path.replace(/\.js/, '.css');
                        } else {
                            me.path = me.name + '/js/' + me.name + '.js'
                        }
                    }
                }
            }
        }
    }
}
        
{% for key, group in groups %}
YUI_config.groups['{{ key }}'] = {{ group|json_encode|raw }}
{% endfor %} 
