{% autoescape %}
{# Set up the global YUI config object #}
YUI_config = {
    debug: false,
    comboBase : '{{ path('libbit_yui_combo') }}?',
    root: 'yui3/build/',
    lang: '{{ app.request.locale }}',
    combine: true,

    groups: {
        {# Set up the configured module groups #}
        {% for group in groups %}
        {{ group.name }}: {
            combine: true,
            {% if app.environment == 'dev' %}
            filter: 'DEBUG',
            {% endif %}
            root: '{{ group.root }}',
            patterns: {
                '{{ group.pattern }}': {
                    configFn: function(me) {
                        if (/-css/.test(me.name)) {
                            me.type = 'css';
                            me.path = me.path.replace(/\.js/, '.css');
                        }
                    }
                }
            }
        },
        {% endfor %}

        gallery: {
            root: 'yui3-gallery/build/',
            combine: true,
            patterns: {
                'gallery-': {},
                'lang/gallery-': {},
                'gallerycss-': { type: 'css' }
            }
        }
    }
}
{% endautoescape %}
